<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:background="@drawable/row">

	<TextView android:id="@+id/orderCode" android:layout_width="match_parent" android:layout_height="wrap_content"
		android:text="Order Code" android:textStyle="bold" android:textSize="14sp" android:singleLine="true"
		android:ellipsize="end" android:padding="5dp" style="@style/rowContent" android:layout_toLeftOf="@+id/orderDate" />

	<TextView android:id="@+id/orderDate" android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="Order Date" android:textStyle="bold" android:textSize="14sp" android:singleLine="true"
		android:ellipsize="end" android:padding="5dp" style="@style/rowContent" android:layout_toLeftOf="@+id/check" />

	<CheckBox android:id="@+id/check" android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_marginRight="10dp"
		android:focusable="false" />

</RelativeLayout>