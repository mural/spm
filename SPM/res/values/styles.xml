<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyThemeWihoutTitle" parent="Theme.Sherlock"> 
        <item name="android:windowNoTitle">true</item>
    </style>

	<style name="defaultTheme" parent="@android:style/Theme.NoTitleBar">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:itemTextAppearance">@style/defaultItemTextAppearance</item>
	</style>

	<style name="noResultsText" parent="android:Widget.TextView">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">17sp</item>
	</style>

	<style name="whiteShadowText">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:shadowColor">@android:color/black</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">-1</item>
	</style>

	<style name="blackShadowText">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:shadowColor">@android:color/white</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1</item>
	</style>

	<style name="buttonBase">
		<item name="android:textColor">#000000</item>
		<item name="android:textColorHint">#000000</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="actionBarTextButton" parent="buttonBase">
		<item name="android:background">@drawable/action_bar_text_button_selector</item>
	</style>
	
	<style name="rowThinContent">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_marginBottom">5dp</item>
	</style>

	<style name="rowContent">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:layout_marginTop">20dp</item>
		<item name="android:layout_marginBottom">20dp</item>
	</style>

	<style name="rowContentRight">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_centerVertical">true</item>
	</style>

	<style name="rowArrow" parent="rowContentRight">
		<item name="android:background">@drawable/arrow_right</item>
 	</style>

</resources>
